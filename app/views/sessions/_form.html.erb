<%= bootstrap_form_for :user, url: login_path do |f| %>
	<%= f.email_field :email, placeholder: "Email", hide_label: true %>
	<%= f.password_field :password, placeholder: "Enter Password", hide_label: true %>

	<%= f.primary 'Login' %>
	<%= link_to "Facebook Login", "/auth/facebook", class: "btn btn-primary oauthLogin" %>
	<!-- link_to "Forgot password?", reset_path, class: "btn btn-link" -->
<% end %>
