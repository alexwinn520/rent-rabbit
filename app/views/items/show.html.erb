<div class="container item-update">
  <div class="col-xs-12 col-sm-10 col-md-10 col-sm-offset-1 col-10-offset-1">
  <h2>Update Item</h2>
  <%= bootstrap_form_for @item do |t| %>

    <%= t.text_field :title, placeholder: "Title", hide_label: true %>
    <%= t.text_area :description, placeholder: "Description", hide_label: true %>
    <%= t.text_field :price_day, placeholder: "Price per day", hide_label: true, prepend: "$", append: ".00" %>
    <%= t.text_field :price_week, placeholder: "Price per week", hide_label: true, prepend: "$", append: ".00" %>
    <%= t.text_field :start_date, placeholder: "Start Date", hide_label: true %>
    <%= t.text_field :end_date, placeholder: "End Date", hide_label: true %>
    <%= t.file_field :image, label: "Input an image", :class => "col-md-4 col-md-offset-4 imageInput" %>

    <%= t.select :rented, [["true"], ["false"]], { class: "selectpicker" }, :label => "Rented?" %>

    <%= t.primary "Update", :class => 'btn btn-primary', :data => {:confirm => 'Are you sure?'} %>
    <span>
    <%= link_to "Delete", @item, :class => 'btn btn-danger', :data => {:confirm => 'Are you sure?'}, :method => :delete %>
    </span>
  <% end %>
  </div>
  
</div>
