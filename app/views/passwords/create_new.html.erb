<section class="row newPassword">
</section>
<div class="row text-center">
  <div class="col-md-6 col-md-offset-3">
    <h2>Reset your password</h2>

    <%= bootstrap_form_for :user do |f| %>
      <%= f.hidden_field :id, :value => @user.id %>
      <%= f.password_field :password, :placeholder => "New Password", hide_label: true %>
      <%= f.password_field :password_confirmation, :placeholder => "Confirm new password", hide_label: true %>
      <%= recaptcha_tags %>
      <%= f.submit "Reset Password", :class=> "btn btn-primary" %>
    <% end %>
  </div>
</div>
